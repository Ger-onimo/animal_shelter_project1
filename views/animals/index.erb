<h2>Animals</h2>

<div>
  <table id="all_animals">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Type</th>
      <th>Admission Date</th>
      <th>Adoption Status</th>
    </tr>
  <% @animals.each do |animal| %>
    <tr>
      <td><img src="/images/adoption_animals/<%= animal.name %>.jpg"
                width="75" height="56" alt=""> </td>
      <td><h4><a href="/animals/<%= animal.id %>">
                <%= animal.name.capitalize %></a></h4></td>
      <td><%= animal.type %></td>
      <td><%= animal.admission_date %></td>
      <td><% if animal.ready_to_adopt == 't'%>
            <h5>Adoptable</h5>
          <% elsif animal.ready_to_adopt == 'f' && animal.adopted == 't' %>
            <h5>Adopted</h5>
            <%else%>
            <h5>Not ready for adoption</h5>
          <% end %></td>
    </tr>
      <% end %>
  </table>
</div>

<div>
  <h3><a href="/animals/new" >Add a New Animal</a></h3>
</div>
<div>
  <h3><a href="/adoptions/new" >Adoptable Animals</a></h3>
</div>

<h2>Owners</h2>

<div id="owner-wrapper">
  <table>
    <tr>
      <th>Name</th>
      <th>Animal Preference</th>
    </tr>

  <% @owners.each do |owner| %>
    <tr>
      <td><h3><a href="/owners/<%= owner.id %>"><%= owner.nice_name %></a></h3></td>
      <td><h4><a href="/owners/<%= owner.id %>"><%= owner.animal_preference.upcase%></a></h4></td>
    </tr>
  <% end %>
  </table>
</div>

<div>
  <h3><a href="/owners/new" >Add a New Owner</a></h3>
</div>
